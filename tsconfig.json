{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["./modules/*"]
    }
  },
  "include": ["src/**/*"]
}
